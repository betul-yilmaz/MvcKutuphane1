@using MvcKutuphane.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
    <body class="yazararka">
        <h2>Personeller</h2>
        <link rel="Stylesheet" type="text/css" href="~/StyleSheet1.css">
        <table table class="table table-hover tableboyut" border="1" style="background-color: #d2e5e3">
            <tr class="tablecolor">
                <th>PERSONEL ID</th>
                <th>PERSONEL ADI</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>
            </tr>
            @foreach (var prs in Model)
            {
                <tr>
                    <td>@prs.ID</td>
                    <td>@prs.PERSONEL</td>
                    <td><a href="/Personel/PersonelSil/@prs.ID" class="button silbutton">Sil</a></td>
                    <td><a href="/Personel/PersonelGetir/@prs.ID" class="button guncellebutton">Güncelle</a></td>
                </tr>
            }
        </table>
        <a href="/Personel/PersonelEkle/" class="button eklebutton">Yeni Personel Ekle</a>

    </body>