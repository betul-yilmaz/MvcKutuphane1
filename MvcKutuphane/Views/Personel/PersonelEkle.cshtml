@model MvcKutuphane.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="Stylesheet" type="text/css" href="~/StyleSheet1.css">
<body class="yazararka">
    <form class="form-group" method="post">
        <div></div>
        <div style="margin-top:15px">
            <label class="yazarlabel">Personel Adı</label>
            @*<input type="text" class="form-control" name="PERSONEL" />*@
            @Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PERSONEL, "", new { @style = "color:forestgreen" })
        </div>
        <div style="margin-top:15px">
            <button class="button eklebutton" id="Btn1">Personel Ekle</button>
        </div>
    </form>
</body>