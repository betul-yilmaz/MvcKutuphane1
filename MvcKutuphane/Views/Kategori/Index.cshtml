@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <style>
        body {
            background-image: url('../../resimler/outside-background.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
        .button {
            border: none;
            color: white;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;     
            border-radius: 12px;
        
        }

        .button1 {
            background-color: #AEF6B1;
            color: black;
            border: 2px solid #4CAF50;
        }

            .button1:hover {
                background-color: #67BF74;
                color: white;
            }

        .button2 {
            background-color: #FBCEC6;
            color: black;
            border: 2px solid #b64d3a;
        }

            .button2:hover {
                background-color: #d2604c;
                color: white;
            }
        .button3 {
            background-color: #9FD7F1;
            color: black;
            border: 2px solid #008CBA;
            
        }

        .button3:hover {
            background-color: #008CBA;
            color: white;
        }

        .tablecolor {
            background-color: #01496B;
            color:aliceblue;
        }
            .tablecolor:hover{
                color:#01496B;
            }
        .tableboyut {
            width: 75%;
            border-radius: 12px;
            margin-left: auto;
            margin-right: auto;
        }
        .td{
            height: 5px;
        }
        .box1{
            margin-left: 210px;
        }
        .bold1{
            font-weight:bold;
        }
    </style>
    
    
</head>
<body>
    <div>
        <h2 style="color:azure" class="text-center">Kategoriler Sayfası</h2>
        <a href="/Kategori/KategoriEkle/" class="button button3 box1">Yeni Kategori Ekle</a>
    </div>
    <div class="container">
        
        <div class="table-responsive">
            <table class="table table-hover tableboyut" border="1" style="background-color: #d2e5e3">
                <tr class="tablecolor">
                    <th>KATEGORİ ID</th>
                    <th>KATEGORİ ADI</th>
                    <th>KATEGORİYİ SİL</th>
                    <th>KATEGORİYİ GÜNCELLE</th>
                </tr>
                @foreach (var ktg in Model)
                {
                    <tr>
                        <td class="bold1">@ktg.ID</td>
                        <td>@ktg.AD</td>
                        <td><a href="/Kategori/KategoriSil/@ktg.ID" class="button button2">Sil</a></td>
                        <td><a href="/Kategori/KategoriGetir/@ktg.ID" class="button button1">Güncelle</a></td>
                    </tr>
                }
            </table>
        </div>
        
    </div>
    
</body>
</html>