@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>
<body class="yazararka">
    <link rel="Stylesheet" type="text/css" href="~/StyleSheet1.css">
    @using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
    {
        <div style="margin-bottom:15px; margin-top:15px;">
            <b style="color:azure">Aranacak Kitap Adını Girin: &nbsp</b> @Html.TextBox("p")
            <input type="submit" value="Ara" />
        </div>
    }

    <table table class="table table-hover tableboyut" border="1" style="background-color: #d2e5e3">
        <tr class="tablecolor">
            <th>ID</th>
            <th>Kitap Adı</th>
            <th>Kitap Yazarı</th>
            <th>Kategorisi</th>
            <th>Basım Yılı</th>
            <th>Yayınevi</th>
            <th>Sayfa</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.ID</td>
                <td>@k.AD</td>
                <td>@k.TBLYAZAR.AD&nbsp @k.TBLYAZAR.SOYAD</td>
                <td>@k.TBLKATEGORI.AD</td>
                <td>@k.BASIMYIL</td>
                <td>@k.YAYINEVI</td>
                <td>@k.SAYFA</td>
                <td>@k.DURUM</td>
                <td><a href="/Kitap/KitapSil/@k.ID" class="button silbutton">Sil</a></td>
                <td><a href="/Kitap/KitapGetir/@k.ID" class="button guncellebutton">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Kitap/KitapEkle/" class="button eklebutton">Yeni Kitap Ekle</a>
</body>