@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
    <body class="yazararka">
        <h2>Üyeler</h2>
        <link rel="Stylesheet" type="text/css" href="~/StyleSheet1.css">
        <table table class="table table-hover tableboyut" border="1" style="background-color: #d2e5e3">
                    <tr class="tablecolor">               
                        <th>ÜYE ID</th>
                        <th>ÜYE ADI</th>
                        <th>ÜYE SOYADI</th>
                        <th>OKUL</th>
                        <th>SİL</th>
                        <th>GÜNCELLE</th>
                        <th>KİTAP GEÇMİŞİ</th>
                    </tr>
                    @foreach (var uye in Model)
                    {
                        <tr>
                            <td>@uye.ID</td>
                            <td>@uye.AD</td>
                            <td>@uye.SOYAD</td>
                            <td>@uye.OKUL</td>
                            <td><a href="/Uye/UyeSil/@uye.ID" class="button silbutton">Sil</a></td>
                            <td><a href="/Uye/UyeGetir/@uye.ID" class="button guncellebutton">Güncelle</a></td>
                            <td><a href="/Uye/UyeKitapGecmis/@uye.ID" class="btn btn-success" style="background-color:lightseagreen">Kitap Geçmişi</a></td>
                        </tr>
                    }
                </table>
                @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

                <a href="/Uye/UyeEkle/" class="button eklebutton">Yeni Üye Ekle</a>

    </body>